{% extends 'base.html.twig' %}

{% block body %}
    <div class="row justify-content-center p-2">
        <h2 class="col-12 col-md-10 text-center my-4">Reset Password</h2>

        {{ form_start(formResetPassword, {"attr":{"class":"col-12 col-md-10 col-lg-5 text-center border border-primary"}} )  }}

        <div class="row justify-content-center mt-3">
            <div class="col-12 text-center">
                {{ form_label(formResetPassword.password, "Password", {"label_attr":{"class":"mb-0"}}) }}
            </div>
            <div class="col-12 text-center">
                {{ form_row(formResetPassword.password,
                    {"label":false, "attr":{"class":"col-12 col-md-6 text-center my-0 registration_input"}}) }}
            </div>
        </div>

        <div class="row justify-content-center mt-3">
            <div class="col-12 text-center">
                {{ form_label(formResetPassword.confirm_password, "Password confirmation", {"label_attr":{"class":"mb-0"}}) }}
            </div>
            <div class="col-12 text-center">
                {{ form_row(formResetPassword.confirm_password,
                    {"label":false, "attr":{ "class":"col-12 col-md-6 text-center my-0 registration_input"}}) }}
            </div>
        </div>

        <div class="row justify-content-center my-4">
            <button type="submit" class="btn btn-info col-10 col-sm-6 col-md-3 col-lg-5">Reset</button>
        </div>

        {{ form_end(formResetPassword) }}
    </div>

{% endblock %}
{% block footer %}{%  endblock %}
{% extends 'base.html.twig' %}

{% block title %}Ajouter une Figure{% endblock %}

{%  form_theme formFigure 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="figure_landing">
        <div class="row justify-content-center p-t-10 m-0">
            {{ form_start(formFigure, {"attr":{"class":"col-12 col-md-10 col-lg-4 col-xl-3 text-center border border-dark bg-white","id":"add_figue_form"}} )  }}

            <div class="row justify-content-center mt-3">
                <h2 class="col-12 col-md-10 text-center my-4">Ajouter une figure</h2>
            </div>


            <div class="row justify-content-center mt-3">
                <div class="col-12 text-center">
                    {{ form_label(formFigure.name, "Nom", {"label_attr":{"class":"mb-0"}}) }}
                </div>
                <div class="col-12 text-center">
                    {{ form_widget(formFigure.name,
                        {"label":false, "attr":{"class":"col-12 col-md-12 text-center my-0 registration_input"}}) }}
                </div>
            </div>

            <div class="row justify-content-center mt-3">
                <div class="col-12 text-center">
                    {{ form_label(formFigure.type, "Type", {"label_attr":{"class":"mb-0"}}) }}
                </div>
                <div class="col-12 text-center">
                    {{ form_widget(formFigure.type,
                        {"label":false, "attr":{"class":"col-12 col-md-12 text-center my-0 registration_input"}}) }}
                </div>
            </div>

            <div class="row justify-content-center mt-3">
                <div class="col-12 text-center">
                    {{ form_label(formFigure.images, "Images", {"label_attr":{"class":"mb-0"}}) }}
                </div>
                <div class="col-12 text-center">
                    {{ form_widget(formFigure.images,
                        {"label":false, "attr":{"class":"col-12 col-md-12 text-center my-0 registration_input"}}) }}
                </div>
            </div>

            <div class="row justify-content-center mt-3">

                <div class="col-12">
                    <ul id="video-fields-list"
                        class="row list-group"
                        data-prototype="{{ form_widget(formFigure.videos.vars.prototype)|e }}"
                        data-widget-tags="{{ '<li class="col-12 my-1"></li>'|e }}"
                        data-widget-counter="{{ formFigure.videos|length }}">
                        {% for videoField in formFigure.videos %}
                            <li class="col-12">
                                {{ form_errors(videoField) }}
                                {{ form_widget(videoField,  {"attr":{"class":"col-12 col-md-12 text-center my-0 registration_input"}}) }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <button type="button"
                        class="btn btn-white border border-info add-video col-10 col-sm-8 col-md-6 col-lg-4 my-2"
                        data-list-selector="#video-fields-list">
                    Ajouter une video
                </button>
            </div>

            <div class="row justify-content-center mt-3">
                <div class="col-12 text-center">
                    {{ form_label(formFigure.description, "Description", {"label_attr":{"class":"mb-0"}}) }}
                </div>
                <div class="col-12 text-center">
                    {{ form_widget(formFigure.description,
                        {"label":false, "attr":{"class":"col-12 col-md-12 text-center my-0 registration_input"}}) }}
                </div>
            </div>


            <div class="row justify-content-center my-4">
                <button type="submit" class="btn btn-info col-10 col-sm-6 col-md-3 col-lg-5">
                    {% if editMode %}
                        Modifier
                    {% else %}
                        Ajouter
                    {% endif %}
                </button>
            </div>

            {{ form_end(formFigure) }}
        </div>
    </div>

{% endblock %}
{% block footer %}{%  endblock %}
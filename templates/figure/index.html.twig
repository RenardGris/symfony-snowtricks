{% extends 'base.html.twig' %}

{% block title %}Snowtricks!{% endblock %}

{% block before_body %}
    {% embed 'home/landing.html.twig' %}
    {% endembed %}
{% endblock %}

{% block body %}
    <section class="row justify-content-center">

        {% for figure in figures %}

            <div class="card col-3 m-2">
                <h3 class="card-header"> {{ figure.name }}</h3>
                <a class="btn btn-warning" href="{{ path('figure_update', {'id' : figure.id}) }}">Modifier</a>
                <a class="btn btn-danger" href="{{ path('figure_delete', {'id' : figure.id}) }}">Delete</a>
                <div class="card-body">
                    <h6 class="metadata">Cr√©e le : {{ figure.createdAt | date('d-m-Y') }}</h6>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                </svg>
                <div class="card-body">
                    <p class="card-text"> {{ figure.description }}</p>
                </div>
                <div class="card-footer text-muted">
                    <a href="{{ path('figure_show', {'id' : figure.id}) }}" class="btn btn-primary">Lire la suite</a>
                </div>
            </div>

        {% endfor %}

    </section>
{% endblock %}
